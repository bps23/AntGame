package antgame;

class Instruction {
    int st;
    public Instruction(int st){
        this.st = st;
    }
}

class Sense extends Instruction {
    enum Dir{
        Here,
        Ahead,
        LeftAhead,
        RightAhead;
    }

    Dir sensedir;
    int st2;
    Cond cond;
    
    public Sense(Dir sensedir, int st, int st2, Cond cond){
        super(st);
        sensedir = this.sensedir;
        this.st2 = st2;
        this.cond = cond;
        
    }
}

class Mark extends Instruction {
    int i;
    public Mark(int i, int st){
        super(st);
        this.i = i;
    }
}

class Unmark extends Instruction {
    int i;
    public Unmark(int i, int st){
        super(st);
        this.i = i;
    }
}

class PickUp extends Instruction {
    int st2;
    public PickUp(int st1, int st2){
        super(st1);
        this.st2 = st2;
    }
}

class Drop extends Instruction {
    public Drop(int st){
        super(st);
    }
}

class Turn extends Instruction {
    enum left_right{
        LEFT,
        RIGHT;
    }
    left_right lr;
    public Turn(left_right lr, int st){
        super(st);
        this.lr = lr;
    }
}

class Move extends Instruction {
    int st2;
    public Move(int st, int st2){
        super(st);
        this.st2 = st2;
    }
}

class Flip extends Instruction {
    int p;
    int st2;
    public Flip(int p, int st, int st2){
        super(st);
        this.st2 = st2;
        this.p = p;
    }
}
