package antgame;

/**
 *
 * @author team3
 */
public class AntHill {

    private Color color;
    private Cell cell;
    Ant a;
    World w;

    /**
     *
     * @param w
     * @param cell
     * @param c
     */
    public AntHill(World w, Cell cell, Color c) {
        this.w = w;
        this.cell = cell;
        color = c;
        if (color == c.RED) {
            a = new Ant(w, cell, color.RED);
        } else {
            a = new Ant(w, cell, color.BLACK);
        }
        cell.set_anthill(this);
    }

    /**
     *
     * @return
     */
    public Color getColor() {
        return color;
    }

    /**
     *
     * @return
     */
    public Cell getCell() {
        return cell;
    }

    public void setColor(Color color) {
        this.color = color;
    }

    public Ant getA() {
        return a;
    }

}
