package antgame;

/**
 *
 * @author bps23
 */
public enum Color {

    RED,
    BLACK;

    /**
     *
     * @param c some team color  
     * @return the opposite color
     */
    public Color other_color(Color c) {
        switch (c) {
            case RED:
                return BLACK;
            case BLACK:
                return RED;
        }
        return null;
    }

}
