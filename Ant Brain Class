package antgame;

import java.util.ArrayList;

/**
 *
 * @author team3
 */
public class AntBrain {

    Cell cell;
    World world;
    Ant ant;
    AntHill anthill;
    Marker marker;
    ArrayList<Instruction> instructions;

    /**
     *
     */
    public enum Condition {

        FRIEND,
        FOE,
        FRIENDWITHFOOD,
        FOEWITHFOOD,
        FOOD,
        ROCK,
        MARKER,
        FOEMARKER,
        HOME,
        FOEHOME
    }

    /**
     *  
     * @param instructions an ArrayList of instructions that is to be set as the brain
     */
    public AntBrain(ArrayList<Instruction> instructions) {
        this.instructions = instructions;
    }

    public ArrayList<Instruction> getInstructions() {
        return instructions;
    }

}
