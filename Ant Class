package ant;

/**
 *
 * @author sw386
 */
public class Ant {

    /**
     * @param args the command line arguments
     */
    Color color;
    int id;
    int state;
    int resting;
    int direction = 0 - 6;
    boolean has_food;

    public enum Color {

        RED, BLACK
    }

    private Color other_color(Color c) {
        switch (c) {
            case RED:
                return Color.BLACK;
            case BLACK:
                return Color.RED;
        }
        return null;//consider throwing an exception
    }

    private int state(Ant a) {
        return state;
    }

    private int resting(Ant a) {
        return resting;
    }

    private int direction(Ant a) {
        return direction;
    }

    private boolean has_food(Ant a) {
        return has_food;
    }

    public void set_state(Ant a, int s) {
    }

    public void set_resting(Ant a, int r) {
    }

    public void set_direction(Ant a, int d) {
    }

    public void set_has_food(Ant A) {
    }
}
